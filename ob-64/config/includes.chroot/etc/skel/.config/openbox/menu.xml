					</command>
				</action>
			</item>
		</menu>
		<menu id="system" label="System">
			<item label="Alternatives Configurator">
				<action name="Execute">
					<command>
						gksudo /usr/bin/galternatives
					</command>
				</action>
			</item>
			<item label="Htop Task manager">
				<action name="Execute">
					<command>
						x-terminal-emulator -T 'htop task manager' -e htop
					</command>
				</action>
			</item>
			<item label="Bootup-Manager">
				<action name="Execute">
					<command>
						gksudo /usr/bin/bum
					</command>
				</action>
			</item>
			<item label="Disk Manager">
				<action name="Execute">
					<command>
						gksudo /usr/sbin/disk-manager
					</command>
				</action>
			</item>
			<item label="Gdebi Package Installer">
				<action name="Execute">
					<command>
						gksudo /usr/bin/gdebi-gtk
