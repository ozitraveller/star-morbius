					</command>
				</action>
			</item>
			<item label="Root Terminal">
				<action name="Execute">
					<command>
						gksudo x-terminal-emulator
					</command>
				</action>
			</item>			
			<item label="Root File Manager">
				<action name="Execute">
					<command>
						gksudo x-file-manager
					</command>
				</action>
			</item>	
			<item label="System Information">
				<action name="Execute">
					<command>
						/usr/bin/hardinfo
					</command>
				</action>
			</item>	
			<item label="Synaptic Package Manager">
				<action name="Execute">
					<command>
						gksudo /usr/sbin/synaptic
					</command>
				</action>
			</item>
		</menu>
		<separator/>
		<item label="Lock">
			<action name="Execute">
				<command>
					/usr/bin/i3lock -n -p default --color=000000
				</command>
			</action>
		</item>
		<item label="Exit">
			<action name="Execute">
				<command>
					/usr/bin/star-exit
				</command>
			</action>
		</item>
	</menu>
</openbox_menu>
