<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

	<menu id="root-menu" label="Openbox 3">
		<item label="Run Program"><action name="Execute"><command>/usr/bin/xfce4-appfinder --collapsed</command></action></item>
		<separator/>
		<item label="Command"><action name="Execute"><command>gmrun</command></action></item>
		<item label="Terminal"><action name="Execute"><command>x-terminal-emulator</command></action></item>
		<item label="File Manager"><action name="Execute"><command>x-file-manager</command></action></item>
		<item label="Web Browser"><action name="Execute"><command>x-www-browser</command></action></item>
<!-- installer start -->
        <separator/>
			<item label="Install Star"><action name="Execute"><command>su-to-root -X -c /usr/sbin/debian-installer-launcher</command></action></item>
<!-- installer end -->			
		<separator/>
		<menu id="settings" label="Settings">
			<menu id="obConfig" label="Openbox">
				<item label="Edit menu.xml">
					<action name="Execute">
						<command>
							editor ~/.config/openbox/menu.xml
						</command>
					</action>
				</item>
				<item label="Edit rc.xml">
					<action name="Execute">
						<command>
							editor ~/.config/openbox/rc.xml
						</command>
					</action>
				</item>
				<item label="Edit autostart">
					<action name="Execute">
						<command>
							editor ~/.config/openbox/autostart
						</command>
					</action>
				</item>
				<separator/>
				<item label="GUI Menu Editor">
					<action name="Execute">
						<command>
							/usr/bin/obmenu
						</command>
					</action>
				</item>
				<item label="GUI Config Tool">
					<action name="Execute">
						<command>
							/usr/bin/obconf
						</command>
					</action>
				</item>
				<separator/>
				<item label="Reconfigure">
					<action name="Reconfigure"/>
				</item>
				<item label="Restart">
					<action name="Restart"/>
				</item>
			</menu>
			<item label="ARandR Screen Layout Editor">
				<action name="Execute">
					<command>
						arandr
					</command>
				</action>
			</item>
			<item label="Appearance">
				<action name="Execute">
					<command>
						/usr/bin/lxappearance
					</command>
				</action>
			</item>
			<item label="Power Manager">
				<action name="Execute">
					<command>
						/usr/bin/xfce4-power-manager-settings
					</command>
				</action>
			</item>
			<item label="Choose Wallpaper">
				<action name="Execute">
					<command>
						/usr/bin/nitrogen ~/images/wallpapers/
					</command>
				</action>
			</item>
		</menu>		
		<separator/>
		<menu id="accessories" label="Accessories">
			<item label="Archive Manager">
				<action name="Execute">
					<command>
						/usr/bin/file-roller
					</command>
				</action>
			</item>
		    <item label="Calculator">
				<action name="Execute">
					<command>
						/usr/bin/gnome-calculator
					</command>
				</action>
			</item>
		    <item label="Catfish File Search">
				<action name="Execute">
					<command>
						/usr/bin/catfish
					</command>
				</action>
			</item>
			<item label="Geany Editor">
				<action name="Execute">
					<command>
						editor
					</command>
				</action>
			</item>
			<item label="Terminal">
				<action name="Execute">
					<command>
						x-terminal-emulator
					</command>
				</action>
			</item>
			<item label="Thunar">
				<action name="Execute">
					<command>
						x-file-manager
					</command>
				</action>
			</item>
			<item label="Xarchiver">
				<action name="Execute">
					<command>
						/usr/bin/xarchiver
					</command>
				</action>
			</item>
		</menu>
		<menu id="graphics" label="Graphics">
		    <item label="Mirage">
				<action name="Execute">
					<command>
						/usr/bin/mirage
					</command>
				</action>
			</item>
		    <item label="Screenshot">
				<action name="Execute">
					<command>
						/usr/bin/xfce4-screenshooter
					</command>
				</action>
			</item>
		</menu>
		<menu id="internet" label="Internet">
			<item label="Iceweasel">
				<action name="Execute">
					<command>
						x-www-browser
					</command>
				</action>
			</item>
